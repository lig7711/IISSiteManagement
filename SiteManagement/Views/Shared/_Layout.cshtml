<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Site Control Room</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/jquery.ui/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery.ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-datetimepicker/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/toastr.min.css" rel="stylesheet" />

    <script src="~/Content/js/jquery-2.1.1.js"></script>
    <script src="~/Content/js/NormalDataList.js"></script>
    <script src="~/Content/js/jquery-ui.min.js"></script>
    <script src="~/Content/js/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Content/js/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>
    <script src="~/Content/js/FormValidation.js"></script>
    <script src="~/Content/js/toastr.min.js"></script>
</head>
<body style="background-color:#fff;">
    @RenderBody()

    <script type="text/javascript">
        $(function () {
            $('#chooseDate').datetimepicker({
                language: 'zh-CN',
                weekStart: 1,
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayBtn: "linked",
                startView: 'month',
                minView: 'month',
                maxView: 'decade',
            });
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "preventDuplicates": true,
                "positionClass": "toast-top-center",
                "showDuration": "400",
                "hideDuration": "1000",
                "timeOut": "7000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
        });

        function AlertInfo(text, flag) {
            if (flag)
                toastr['success'](text, "Success");
            else
                toastr['error'](text, "Error");
        }
    </script>
</body >
</html >

